<?xml version="1.0"?>
<!DOCTYPE tsung SYSTEM "/usr/local/share/tsung/tsung-1.0.dtd" [] >
<tsung loglevel="notice">

  <!-- Client side setup -->
  <clients>
    <client host="localhost" use_controller_vm="true" maxusers='15000'/>
  </clients>

  <!-- Server side setup -->
  <servers>
    <server host="jobio.ebix2cej2m.us-west-2.elasticbeanstalk.com" port="80" type="tcp"></server>
  </servers>


  <load>
    <arrivalphase phase="1" duration="30" unit="second">
      <users arrivalrate="1" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="2" duration="30" unit="second">
	  <users arrivalrate="2" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="3" duration="30" unit="second">
	  <users arrivalrate="4" unit="second"></users>
    </arrivalphase>
    <arrivalphase phase="4" duration="30" unit="second">
     <users arrivalrate="8" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="5" duration="30" unit="second">
     <users arrivalrate="16" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="6" duration="30" unit="second">
     <users arrivalrate="32" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="7" duration="30" unit="second">
     <users arrivalrate="64" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="8" duration="30" unit="second">
     <users arrivalrate="128" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="9" duration="30" unit="second">
     <users arrivalrate="256" unit="second"></users>
   </arrivalphase>
   <arrivalphase phase="10" duration="30" unit="second">
     <users arrivalrate="512" unit="second"></users>
   </arrivalphase>
  </load>

  <options>
    <!-- Set connection timeout to 2 seconds -->
    <option name="global_ack_timeout" value="3000"></option>

    <option type="ts_http" name="user_agent">
      <user_agent probability="100">Mozilla/5.0 (Windows; U; Windows NT 5.2; fr-FR; rv:1.7.8) Gecko/20050511 Firefox/1.0.4</user_agent>
    </option>
  </options>

  <sessions>
    <session name="http-example" probability="100" type="ts_http">
      <!-- go to home page -->
      <request>
        <http url='/' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, admin is looking at posts -->
      <thinktime value="2" random="true"></thinktime>

      <!-- Go to admin sign up page-->
      <request>
        <http url='/admins/sign_up' version='1.1' method='GET'></http>
      </request>

      <!-- wait for up to 2 seconds, admin is signing up -->
      <thinktime value="2" random="true"></thinktime>      

      <setdynvars sourcetype="random_string" length="8">
	  <var name="rand" />
      </setdynvars>

      <request subst="true">
	    <http
            url='/admins'
            version='1.1'
            method='POST'
            contents='admin%5Bemail%5D=%%rand%%email%40gmail.com&amp;admin%5Bpassword%5D=password&amp;admin%5Bpassword_confirmation%5D=password&amp;commit=Sign+up' 
	    />
      </request> 

      <!-- wait for up to 2 seconds -->
      <thinktime value="2" random="true"></thinktime>      
    
      <setdynvars sourcetype="random_string" length="8">
	  <var name="rand" />
      </setdynvars>

      <setdynvars sourcetype="random_string" length="32">
	  <var summary="rand" />
      </setdynvars>
      <!-- Go to company creation page-->
      <request subst="true">
        <http
            url='/companies/new'
            version='1.1'
            method='POST'
            contents='company%5Bname%5D=%%rand%%&amp;company%5Bsummary%5D=%%rand%%&amp;commit=Company+Create' 
        />
      </request>

      <!-- wait for up to 2 seconds, admin checks users signed up -->
      <thinktime value="2" random="true"></thinktime>      

      <request>
          <http url='/admin_users' version='1.1' method='GET' />
      </request>

      <!-- wait for up to 2 seconds, admin returns to home page -->
      <thinktime value="2" random="true"></thinktime>      

      <request>
          <http url='/admin_home' version='1.1' method='GET' />
      </request>

      <!-- wait for up to 2 seconds, admin signs out -->
      <thinktime value="2" random="true"></thinktime>      

      <request>
          <http url='/admins/sign_out' version='1.1' method='GET' />
      </request>

    </session>
  </sessions>
</tsung>
