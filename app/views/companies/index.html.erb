<p id="notice"><%= notice %></p>

<h1>Search Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= form_tag(companies_path, method: :get) do |f| %>
      <%= text_field_tag(:search, params[:search]) %>
      <%= submit_tag ("Search") %>
    <% end %>

    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= raw(company.qr_code) %></td>
        <td><%= button_to 'Show', company, method: "get" %></td>
        <td><%= button_to 'Edit', edit_company_path(company), method: "get" %></td>
        <td><%= button_to 'Destroy', company, method: "delete", data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

